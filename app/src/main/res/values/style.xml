<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHighlight">?attr/colorSecondaryContainer</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <declare-styleable name="ExpandableTextView">
        <attr name="limitedMaxLines" format="integer" />
        <attr name="originalText" format="string" />
        <attr name="expandAction" format="string" />
        <attr name="expandActionColor" format="string" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="loadingViewProgressBarSize" format="dimension" />
        <attr name="loadingViewProgressBarColor" format="color" />
        <attr name="loadingViewHintText" format="string" />
        <attr name="loadingViewHintTextColor" format="color" />
        <attr name="loadingViewHintTextSize" format="dimension" />
        <attr name="showLoadingViewHintText" format="boolean" />
        <attr name="showLoadingViewProgressBar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LoadFailedView">
        <attr name="loadFailedViewHintDrawable" format="reference" />
        <attr name="loadFailedViewHintDrawableSize" format="dimension" />
        <attr name="loadFailedViewHintText" format="string" />
        <attr name="loadFailedViewHintTextColor" format="color" />
        <attr name="loadFailedViewHintTextSize" format="dimension" />
        <attr name="showLoadFailedViewHintText" format="boolean" />
        <attr name="showLoadFailedViewHintDrawable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AlignTextView">
        <attr name="alignOnlyOneLine" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="AndRatingBar">
        <attr format="color|reference" name="starColor"/>
        <attr format="color|reference" name="subStarColor"/>
        <attr format="color|reference" name="bgColor"/>
        <attr format="reference" name="starDrawable"/>
        <attr format="reference" name="bgDrawable"/>
        <attr format="boolean" name="keepOriginColor"/>
        <attr format="float" name="scaleFactor"/>
        <attr format="dimension" name="starSpacing"/>
        <attr format="boolean" name="right2Left"/>
    </declare-styleable>

</resources>