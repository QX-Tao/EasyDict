<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_word_book_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mcv_my_collect"
        app:strokeColor="@color/trans"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        app:cardCornerRadius="@dimen/card_view_radius_medium"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tv_book_name"
            android:textSize="@dimen/text_size_normal"
            android:textColor="?attr/colorOnSurface"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="@string/def_str"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawablePadding="10dp"
            app:drawableStartCompat="@drawable/ic_folder" />

    </androidx.cardview.widget.CardView>

</LinearLayout>