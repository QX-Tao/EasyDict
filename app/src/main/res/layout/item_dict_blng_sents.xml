<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">
    
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_item_content"
        android:id="@+id/tv_item_num"
        android:layout_marginEnd="4dp"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:gravity="center_vertical"/>

    <LinearLayout
        android:id="@+id/ll_item_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_num"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_item_sen_voice"
        android:layout_width="0dp"
        android:layout_marginEnd="4dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_item_sen_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondTextColor"
            android:textSize="16sp" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/tv_item_sen_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/secondTextColor"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        app:layout_constraintLeft_toRightOf="@+id/ll_item_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/iv_item_sen_voice"
        android:layout_marginEnd="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_ripple_r30"
        android:src="@drawable/ic_voice" />

</androidx.constraintlayout.widget.ConstraintLayout>