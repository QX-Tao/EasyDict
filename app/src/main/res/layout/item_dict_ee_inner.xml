<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">
    
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ll_item_content"
        android:id="@+id/tv_item_num"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginEnd="4dp"
        android:minWidth="24dp"
        android:minHeight="21dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_item_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_item_num"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColorHighlight="?attr/colorSecondaryContainer"
            android:textIsSelectable="true"
            android:id="@+id/tv_item_tran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:textColorHighlight="?attr/colorSecondaryContainer"
            android:textIsSelectable="true"
            android:id="@+id/tv_item_exam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:textColorHighlight="?attr/colorSecondaryContainer"
            android:textIsSelectable="true"
            android:id="@+id/tv_item_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>