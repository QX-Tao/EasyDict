<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_open_source_item_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_open_source_item_arrow"
        android:layout_marginEnd="10dp"
        android:id="@+id/tv_open_source_item_title"
        android:layout_width="0dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurface"
        android:textSize="17sp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_open_source_item_title"
        app:layout_constraintBottom_toTopOf="@+id/tv_open_source_item_link"
        app:layout_constraintStart_toStartOf="@+id/tv_open_source_item_title"
        app:layout_constraintEnd_toEndOf="@id/tv_open_source_item_title"
        android:id="@+id/tv_open_source_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="15sp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_open_source_item_info"
        app:layout_constraintBottom_toTopOf="@+id/tv_open_source_item_license"
        app:layout_constraintStart_toStartOf="@+id/tv_open_source_item_info"
        app:layout_constraintEnd_toEndOf="@id/tv_open_source_item_info"
        android:id="@+id/tv_open_source_item_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="15sp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/tv_open_source_item_link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_open_source_item_info"
        app:layout_constraintEnd_toEndOf="@id/tv_open_source_item_info"
        android:id="@+id/tv_open_source_item_license"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="15sp" />

    <ImageView
        android:src="@drawable/ic_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_open_source_item_title"
        android:id="@+id/iv_open_source_item_arrow"
        android:layout_width="14dp"
        android:layout_height="14dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>