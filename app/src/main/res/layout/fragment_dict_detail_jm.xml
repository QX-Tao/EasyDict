                android:id="@+id/tv_baike_digest_part_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:textColor="@color/theme_color_gol"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_baike_digest_part_title"/>

            <com.qxtao.easydict.ui.view.ExpandableTextView
                android:id="@+id/tv_baike_digest_part_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxHeight="120dp"
                android:textIsSelectable="true"
                app:foldLines="6"
                app:foldedSuffix="@string/empty_string"
                app:expandedSuffix="@string/empty_string"
                android:textSize="15sp"
                android:textColor="@color/secondTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_baike_digest_part_word"/>

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:text="@string/source_"
                android:textColor="@color/thirdInsTextColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_baike_digest_part_desc"/>

            <TextView
                android:id="@+id/tv_source_baike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:textSize="12sp"
                android:textColor="@color/thirdInsTextColor"
                app:layout_constraintStart_toEndOf="@+id/tv_source"
                app:layout_constraintTop_toBottomOf="@id/tv_baike_digest_part_desc"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--  第十四部分：拼写错误  -->
        <LinearLayout
            android:visibility="gone"
            android:padding="15dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBgWhite1"
            android:id="@+id/ll_typos_part"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/thirdInsTextColor"
                android:text="@string/are_you_looking_for"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:id="@+id/rv_typos_explain"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--  第十五部分：重新输入  -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:padding="15dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBgWhite1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cl_retype_part">

            <TextView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_not_result_desc"
                android:textSize="16sp"
                android:text="@string/not_result_desc"
                android:textColor="@color/secondTextColor"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="15dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/themeMainColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_not_result_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_retype"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/retype"
                    android:textColor="@color/secondTextColor"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>