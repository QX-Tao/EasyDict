<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_wv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgWhite10"
    tools:context=".ui.activity.web.WebActivity">

    <View
        android:id="@+id/v_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content"
        app:layout_constraintTop_toTopOf="@+id/v_holder"
        app:layout_constraintBottom_toBottomOf="@+id/v_holder"
        app:layout_constraintStart_toStartOf="@+id/v_holder"
        app:layout_constraintEnd_toEndOf="@+id/v_holder"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <WebView
            android:id="@+id/webView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/trans"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <com.qxtao.easydict.ui.view.LoadingView
            android:id="@+id/lv_loading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:ballColor="@color/themeMainColor"
            app:internal="60"
            app:duration="200"
            app:max_radius="20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_loading_fail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/tv_loading_fail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:padding="20dp"
                android:drawablePadding="15dp"
                android:textSize="17sp"
                android:textColor="@color/secondTextColor"
                android:text="@string/failed_to_load_click_the_screen_to_try_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_loading_fail2" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="@color/trans"
            app:cardElevation="0dp"
            android:id="@+id/cv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/include_title_bar_second"
                layout="@layout/include_title_bar_second"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <me.jingbin.progress.WebProgress
        android:id="@+id/wp_progress"
        app:layout_constraintTop_toTopOf="@id/v_holder"
        app:layout_constraintStart_toStartOf="@id/v_holder"
        app:layout_constraintEnd_toEndOf="@id/v_holder"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>