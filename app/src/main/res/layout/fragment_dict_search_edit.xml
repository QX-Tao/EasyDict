<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.dict.DictSearchEditFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:transitionName="dict_search_box"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="2dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/et_edit_unfold"
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:autofillHints="text"
                android:gravity="start"
                android:hint="@string/input_word_or_sentence"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="1dp"
                android:paddingStart="17dp"
                android:paddingTop="17dp"
                android:paddingEnd="17dp"
                android:paddingBottom="70dp"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-169dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_et_control"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_height="0.5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="?attr/colorSurfaceContainerHighest"
                    android:layout_width="match_parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_edit_fold"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/cv_edit_fold"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_height="32dp"
                    android:layout_width="32dp" >

                    <ImageView
                        android:id="@+id/iv_fold"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_fold_edit"
                        android:padding="8dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_undo"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/cv_redo"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_height="32dp"
                    android:layout_width="32dp" >

                    <ImageView
                        android:id="@+id/iv_undo"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_redo"
                        android:padding="9dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_redo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/cv_backspace"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                    android:layout_marginEnd="8dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_height="32dp"
                    android:layout_width="32dp" >

                    <ImageView
                        android:id="@+id/iv_redo"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_undo"
                        android:padding="9dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_backspace"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                    android:layout_marginEnd="15dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="16dp"
                    android:layout_height="32dp"
                    android:layout_width="32dp" >

                    <ImageView
                        android:id="@+id/iv_backspace"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_backspace"
                        android:padding="8dp"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>