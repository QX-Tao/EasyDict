<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBgWhite2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.dict.DictWelcomeFragment">

    <View
        android:id="@+id/v_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.core.widget.NestedScrollView
        app:layout_constraintTop_toTopOf="@+id/v_holder"
        app:layout_constraintBottom_toBottomOf="@+id/v_holder"
        app:layout_constraintStart_toStartOf="@+id/v_holder"
        app:layout_constraintEnd_toEndOf="@+id/v_holder"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/cv_dinosaur"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/mcv_search_box"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/colorBgWhite1"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_dinosaur"
                    android:src="@drawable/dinosaur_0"
                    android:layout_height="80dp"
                    android:layout_width="80dp"/>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_search_box"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/rv_search_suggestion"
                app:layout_constraintTop_toBottomOf="@id/cv_dinosaur"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:cardBackgroundColor="@color/colorBgWhite1"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:textSize="17sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:textColor="@color/secondTextColor"
                    android:padding="17dp"
                    android:id="@+id/tv_search_box"
                    android:text="@string/click_here_to_search"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/iv_voice"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/ic_voice2"
                    android:background="@drawable/bg_ripple_r30"
                    android:layout_marginEnd="13dp"
                    android:padding="4dp"
                    android:layout_height="30dp"
                    android:layout_width="30dp"/>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_suggestion"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:layout_marginBottom="12dp"
                android:clipToPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcv_search_box"
                app:layout_constraintBottom_toTopOf="@id/hsv_function"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

            <HorizontalScrollView
                android:scrollbars="none"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_search_suggestion"
                android:id="@+id/hsv_function"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        android:layout_marginBottom="56dp"
                        app:cardBackgroundColor="@color/colorBgWhite1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <TextView
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_day_sentence"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/secondTextColor"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/daily_sentence"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"
                            app:drawableStartCompat="@drawable/ic_sentence" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/colorBgWhite1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <TextView
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_grammy_check"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/secondTextColor"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/grammy_check"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"
                            app:drawableStartCompat="@drawable/ic_check" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/colorBgWhite1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp">

                        <TextView
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/tv_word_list"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="@color/secondTextColor"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/word_list"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawablePadding="10dp"
                            app:drawableStartCompat="@drawable/ic_list" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_title_bar_second"
            layout="@layout/include_title_bar_second"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>