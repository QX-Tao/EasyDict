<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_item_tv_en"
        android:id="@+id/iv_item_voice"
        android:layout_marginEnd="4dp"
        android:background="@drawable/bg_ripple_r12"
        android:padding="3dp"
        android:src="@drawable/ic_voice"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

    <TextView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_item_tv_cn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item_voice"
        android:textColorHighlight="?attr/colorSecondaryContainer"
        android:textIsSelectable="true"
        android:id="@+id/tv_item_tv_en"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_item_tv_en"
        app:layout_constraintStart_toStartOf="@id/tv_item_tv_en"
        app:layout_constraintEnd_toEndOf="@id/tv_item_tv_en"
        android:textColorHighlight="?attr/colorSecondaryContainer"
        android:textIsSelectable="true"
        android:id="@+id/tv_item_tv_cn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/text_size_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>

