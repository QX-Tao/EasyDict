<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBgWhite2"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.dict.DictSearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="@id/v_holder"
        app:layout_constraintEnd_toEndOf="@id/v_holder"
        app:layout_constraintTop_toTopOf="@id/v_holder"
        app:layout_constraintBottom_toBottomOf="@id/v_holder"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_search_box"
            android:transitionName="dict_search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="62dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sp_dict_stroke_yel_r15"
            app:layout_constraintBottom_toTopOf="@id/dict_search_content_fragment"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >
            
            <com.qxtao.easydict.ui.view.MultiEditText
                style="@style/EditTextStyle"
                android:textSize="17sp"
                android:maxLines="4"
                android:textColor="@color/secondTextColor"
                android:paddingStart="39dp"
                android:paddingEnd="33dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:minHeight="62dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:imeOptions="actionSearch"
                android:id="@+id/et_search_box"
                android:textColorHint="@color/secondInsTextColor"
                android:hint="@string/input_word_or_sentence"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_back"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/ic_back2"
                android:background="@drawable/bg_ripple_r30"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:padding="3dp"
                android:layout_height="30dp"
                android:layout_width="30dp"/>
            
            <ImageView
                android:id="@+id/iv_clear"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_clear2"
                android:background="@drawable/bg_ripple_r30"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_search"
                android:layout_height="30dp"
                android:layout_width="30dp"/>

            <ImageView
                android:id="@+id/iv_search"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_search4"
                android:background="@drawable/bg_ripple_r30"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="6dp"
                android:padding="2dp"
                android:layout_height="30dp"
                android:layout_width="30dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_edit_unfold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/cl_search_box"
            app:layout_constraintStart_toStartOf="@id/cl_search_box"
            app:layout_constraintEnd_toEndOf="@+id/cl_search_box"
            app:cardBackgroundColor="@color/colorBgWhite1"
            app:cardElevation="0dp"
            app:cardCornerRadius="16dp"
            android:layout_height="32dp"
            android:layout_width="32dp">

            <ImageView
                android:id="@+id/iv_unfold"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_unfold_edit"
                android:padding="8dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent" />

        </androidx.cardview.widget.CardView>

        <androidx.fragment.app.FragmentContainerView
            app:layout_constraintTop_toBottomOf="@id/cl_search_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/dict_search_content_fragment"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/v_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>